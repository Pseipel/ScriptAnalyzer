	<modelVersion>4.0.0</modelVersion>

	<groupId>de.uni-koeln.dh.bd</groupId>
	<artifactId>bd-webapp</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<!-- <packaging>jar</packaging> -->

	<name>bd-webapp</name>
	<description>Web app</description>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.8.RELEASE</version>
		<relativePath/>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		
		<!-- <java.version>1.8</java.version> -->
		<lucene.version>7.1.0</lucene.version>
		<!-- <htmlunit.version>2.28</htmlunit.version> -->
		<jquery.version>3.2.1</jquery.version>
		<bootstrap.version>3.3.7-1</bootstrap.version>
	</properties>

	<dependencies>	 
		<!-- Testing (JUnit), Logging (SLF4J: log4j)... -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
 
 		<!-- Web: Template engine (Thymeleaf), XML/JSON (Jackson), Server (Tomcat)... -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		
		<!-- Indexing/Searching: Lucene -->
		<!-- TODO add libs -->
		<dependency>
			<groupId>org.apache.lucene</groupId>
			<artifactId>lucene-core</artifactId>
			<version>${lucene.version}</version>
		</dependency>

		<!-- TODO WebJars incl. Leaflet, D3.js -->
		
		<!-- JS: jQuery -->
		<dependency>
			<groupId>org.webjars</groupId>
			<artifactId>jquery</artifactId>
			<version>${jquery.version}</version>
		</dependency>

		<!-- CSS/JS: Bootstrap -->
		<dependency>
			<groupId>org.webjars</groupId>
			<artifactId>bootstrap</artifactId>
			<version>${bootstrap.version}</version>
			<!-- 
			<exclusions>
				<exclusion>
					<groupId>org.webjars</groupId>
					<artifactId>jquery</artifactId>
				</exclusion>
			</exclusions>
			-->
		</dependency>
		
		<dependency>
			<groupId>org.webjars</groupId>
			<artifactId>webjars-locator</artifactId>
		</dependency>	
	</dependencies>

